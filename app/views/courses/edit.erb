<h1>Edit <%= @course.name %></h1>

<form action="/courses/<%=@course.id %>" method="POST">
  <label> Course Title </label>
  <input type="text" name="title" value="<%=@course.title %>"> <br>

  <label> Course Department </label>
  <input type="text" name="department" value="<%=@course.department%>"> <br>

  <label> Course Instructor </label>
  <input type="text" name="professor" value="<%=@course.professor%>"> <br>

  <label> Course Location </label>
  <input type="text" name="location" value="<%=@course.location%>"> <br>

  <input type="submit" value="Update">
</form>
