<h1><%= @user.name %>'s Courses</h1>
<br>
<%if @courses.empty?%>
  <%="You have no courses :("%>
<%else%>
  <ol>
    <%@courses.each do |course|%>
      <li><a href="/courses/<%=course.id%>"><%=course.title%></a></li>
      <ul>
        <li><%=course.department%></a></li>
        <li><%=course.professor%></a></li>
        <li><%=course.location%></a></li>
      </ul>
    <%end%>
  </ol>
<%end%>
<h3>Options:</h3>
<ul>
  <li><a href="/courses/new">Add a new course</a></li>
  <li><a href="/logout">Log Out</a></li>
</ul>
